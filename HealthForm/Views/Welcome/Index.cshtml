@model HealthForm.Models.User
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Welcome</title>
    @Styles.Render("~/Content/css")
</head>

<body>
    <div class="container">
        <div class="row row-center">
            <h2 class="intro"> Welcome </h2>
        </div>

        <div class="row">
            <h2 class="login">
                @using (Html.BeginForm("Login", "Welcome"))
                {
                    <div class="form-group block">
                        <label>
                            Name:
                        </label> 
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control inline-form-element" })
                        
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(m => m.Password)
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <input type="submit" title="formlink" value="Log in" />
                    </div>
                }




            </h2>
        </div>
        
    </div>
</body>
</html>
