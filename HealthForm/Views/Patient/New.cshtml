@model HealthForm.ViewModels.RandomPatientViewModel


<h1>Patient Information </h1><br>

@using (Html.BeginForm("Create", "New"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Patient.FirstName)
        @Html.TextBoxFor(m => m.Patient.FirstName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Patient.LastName)
        @Html.TextBoxFor(m => m.Patient.LastName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Patient.MiddleName)
        @Html.TextBoxFor(m => m.Patient.MiddleName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Patient.Location)
        @Html.DropDownListFor(m => m.Patient.Location, new SelectList(new List<string> { "Mississauga, Canada", "Toronto, Canada" }), "--Select--", new { @class = "form-control" })
    </div>

    <label>
        <b>Select the ethnicities you identify with:</b>
    </label>
    <div class="checkbox">
        <input type="checkbox" name="ethnicity" value=0 /> White <br />
        <input type="checkbox" name="ethnicity" value=1 /> Black or African American <br />
        <input type="checkbox" name="ethnicity" value=2 /> Hispanic/Latino <br />
        <input type="checkbox" name="ethnicity" value=3 /> Asian <br />
        <input type="checkbox" name="ethnicity" value=4 /> North American First Nations <br />
        <input type="checkbox" name="ethnicity" value=5 /> Pacific Islander <br />
        <input type="checkbox" name="ethnicity" value=6 /> Other <br />
        

    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Patient.Gender)<br />
        @Html.RadioButtonFor(m => m.Patient.Gender, 'M') Male
        @Html.RadioButtonFor(m => m.Patient.Gender, 'F') Female
        @Html.RadioButtonFor(m => m.Patient.Gender, 'O') Other
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Patient.Education)<br />
        @Html.RadioButtonFor(m => m.Patient.Education, 0) No schooling attended
        @Html.RadioButtonFor(m => m.Patient.Education, 1) 8th grade
        @Html.RadioButtonFor(m => m.Patient.Education, 2) High school, no diploma
        @Html.RadioButtonFor(m => m.Patient.Education, 3) High school graduate or equivalent
        @Html.RadioButtonFor(m => m.Patient.Education, 4) College, no degree
        @Html.RadioButtonFor(m => m.Patient.Education, 5) Associate Degree
        @Html.RadioButtonFor(m => m.Patient.Education, 7) Bachelor Degree
        @Html.RadioButtonFor(m => m.Patient.Education, 8) Master's Degree
        @Html.RadioButtonFor(m => m.Patient.Education, 9) Professional Degree
        @Html.RadioButtonFor(m => m.Patient.Education, 10) Doctorate Degree
    </div>

    <div class="form-group">

        <input type="submit" title="FormLink" value="Submit Data" />
    </div>
}
